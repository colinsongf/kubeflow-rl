apiVersion: "tensorflow.org/v1alpha1"
kind: "TfJob"
metadata:
  name: "{{job_name}}"
  namespace: default
spec:
  replicaSpecs:
    - replicas: 1
      tfReplicaType: MASTER
      template:
        spec:
          containers:
            - image: {{image}}
              name: tensorflow
              command: ["python3", "-m", "baselines.ppo2.run_atari"]
          restartPolicy: OnFailure
    - replicas: 3
      tfReplicaType: WORKER
      template:
        spec:
          containers:
            - image: {{image}}
              name: tensorflow
              command: ["python3", "-m", "baselines.ppo2.run_atari"]
          restartPolicy: OnFailure
    - replicas: 2
      tfReplicaType: PS
  tensorBoard:
    logDir: {{log_dir}}
  tfImage: tensorflow/tensorflow:1.3.0
